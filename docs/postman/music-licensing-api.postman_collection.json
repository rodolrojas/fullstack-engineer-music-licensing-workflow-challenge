{
  "info": {
    "name": "Music Licensing Workflow API",
    "description": "Postman collection that exercises the Music Licensing Workflow backend API with runnable examples and tests.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "movieId",
      "value": ""
    },
    {
      "key": "sceneId",
      "value": ""
    },
    {
      "key": "songId",
      "value": ""
