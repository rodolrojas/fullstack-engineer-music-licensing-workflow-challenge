  "item": [
    {
      "name": "Movies",
      "item": [
        {
          "name": "Create movie",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"The Epic Adventure\",\n  \"description\": \"A thrilling journey across distant lands\",\n  \"releaseYear\": 2024\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": "{{baseUrl}}/movies"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201 or 200', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});",
                  "pm.test('Response includes movie id', function () {",
                  "  const responseBodyJson = pm.response.json();",
                  "  pm.expect(responseBodyJson).to.have.property('id');",
                  "  pm.collectionVariables.set('movieId', responseBodyJson.id);",
                  "});",
                  "pm.test('Response includes title', function () {",
                  "  const responseBodyJson = pm.response.json();",
                  "  pm.expect(responseBodyJson).to.have.property('title');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "List movies",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/movies"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Response is an array', function () {",
                  "  const responseBodyJson = pm.response.json();",
                  "  pm.expect(responseBodyJson).to.be.an('array');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Get movie by id",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/movies/{{movieId}}"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Response id matches movieId', function () {",
                  "  const responseBodyJson = pm.response.json();",
                  "  pm.expect(responseBodyJson.id).to.eql(pm.collectionVariables.get('movieId'));",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Update movie",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"The Epic Adventure (Updated)\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": "{{baseUrl}}/movies/{{movieId}}"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Movie title was updated', function () {",
                  "  const responseBodyJson = pm.response.json();",
                  "  pm.expect(responseBodyJson.title).to.eql('The Epic Adventure (Updated)');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
